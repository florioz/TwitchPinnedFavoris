{
  "manifest_version": 3,
  "name": "Twitch Favorites Sidebar",
  "description": "Pin favorite Twitch streamers with live viewer counts, smart categories, and quick management tools.",
  "version": "0.1.0",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://gql.twitch.tv/*",
    "https://www.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/*"
      ],
      "js": [
        "src/contentScripts/main.js"
      ],
      "css": [
        "styles/sidebar.css",
        "styles/overlay.css",
        "styles/buttons.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background/serviceWorker.js",
    "type": "module"
  }
}
