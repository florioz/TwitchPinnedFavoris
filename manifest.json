{
  "manifest_version": 2,
  "name": "Twitch Favorites Sidebar",
  "description": "Pin favorite Twitch streamers with live viewer counts, smart categories, and quick management tools.",
  "version": "0.1.0",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "https://gql.twitch.tv/*",
    "https://www.twitch.tv/*",
    "https://api.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/*"
      ],
      "js": [
        "src/contentScripts/main.js"
      ],
      "css": [
        "styles/sidebar.css",
        "styles/overlay.css",
        "styles/buttons.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "src/background/serviceWorker.js"
    ],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-pinned-favoris@example.com",
      "strict_min_version": "102.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ],
        "optional": []
      }
    }
  }
}
